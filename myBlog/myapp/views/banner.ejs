<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/main.css' />
    <link rel="shortcut icon" href="http://caibaojian.com/favicon.ico" />
  </head>
  <body>
    <div class="container">
      <div class="header-box">
    		<div class="header">
				<a class="header-left " href="#"></a>
				<div class="header-center"></div>
				<a href="/users/adminLogout" class="logout">退出</a>
			</div>
     </div>
      <div class="content">
        <aside>
          <ul class="menu">
            <li><a href="/">系统首页</a></li>
            <li class="active"><a href="/banner">轮播图管理</a></li>
            <li><a href="/articles">文章管理</a></li>
          </ul>
        </aside>
        <section>
          <h1>单图</h1>
          <form class="bannerForm" action="/banner/addBanner" method="post" enctype="multipart/form-data">
          	<input type="file" name="bannerImg" id="bannerImg" accept="image/*" value="" />
          	<input type="submit" value="添加"/>
          </form>
          <h1>多图</h1>
          <form class="bannerForm" action="/banner/addBanners" method="post" enctype="multipart/form-data">
            <input type="file" name="bannerImgs" id="bannerImgs" accept="image/*" value="" multiple />
            <input type="submit" value="添加"/>
          </form>
          <table class="bannertable" border=1>
            <tr>
              <th>序号</th>
              <th>图片</th>
              <th>是否使用</th>
              <th>操作</th>
            </tr>
            <% if(list) { %>
             <% for(var i = 0; i < list.length; i++){%>
                 <tr>
                    <td>
                  <%=  i*1+1 %>
                    </td>
                    <td>
                    <img src="<%= list[i].src.split('public')[1] %>"/>
                    </td>
                    <td>
                    <input type="checkbox"  checked="" />
                    </td>
                    <td>
                    <a href = "/banner/delete?bannerID=<%= list[i].bannerID %>">删除</a> 
                    </td>
                 </tr>
             <% }%>
          <% }else{%>
             <tr>
                <td colspan="4">查无数据</td>
             </tr>
          <% }%>
          </table>
        </section>
      </div>
      <footer>博客底部</footer>
    </div>
  </body>
  <script src="/javascripts/jquery-1.11.0.js" type="text/javascript" charset="utf-8"></script>
</html>
